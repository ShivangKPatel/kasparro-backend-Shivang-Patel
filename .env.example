# Kasparro ETL Environment Configuration
# Copy this file to .env and fill in your values. Do NOT commit .env to version control.

# ============ DATABASE ============
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
POSTGRES_DB=kasparro

# For docker-compose (container network uses hostname 'db')
DATABASE_URL=postgresql+psycopg2://postgres:changeme@db:5432/kasparro

# For local development (localhost)
# DATABASE_URL=postgresql+psycopg2://postgres:changeme@localhost:5435/kasparro

# ============ APPLICATION ============
APP_NAME=Kasparro ETL
APP_ENV=development
PYTHONUNBUFFERED=1
LOG_LEVEL=INFO

# ============ ETL WORKER ============
ETL_INTERVAL=60
ETL_BATCH_SIZE=100
FAIL_AFTER_N_RECORDS=0

# ============ RESILIENCE ============
RETRY_MAX_ATTEMPTS=5
BACKOFF_BASE_DELAY=0.5
BACKOFF_FACTOR=2.0

# ============ OBSERVABILITY ============
# SENTRY_DSN=
# METRICS_PORT=8001
