APP_ENV=development
PYTHONUNBUFFERED=1

# Database (use DATABASE_URL to override)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
POSTGRES_DB=kasparro
DB_HOST=db
DB_PORT=5435
DATABASE_URL=postgresql+psycopg2://postgres:changeme@db:5432/kasparro

# ETL / worker
ETL_INTERVAL=60
ETL_BATCH_SIZE=100
FAIL_AFTER_N_RECORDS=0

# Resilience
RETRY_MAX_ATTEMPTS=5
BACKOFF_BASE_DELAY=0.5
BACKOFF_FACTOR=2.0

# Observability
LOG_LEVEL=INFO
SENTRY_DSN=
METRICS_PORT=8001